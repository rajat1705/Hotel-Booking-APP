<% include ../partials/header %>

<div class = "container">
	<h1 style = "text-align: center;">
		<%= hotel.name %>	
	</h1>
	<div style = "width: 30%; margin: 25px auto">
		<form action = "/hotels/<%= hotel._id %>?_method=PUT" method = "POST">
			<div class = "form-group">
				<input class = "form-control" type = "text" value="<%= hotel.name %>" name = "hotel[name]">
			</div>
			<div class = "form-group">
				<input class = "form-control" type = "text" value="<%= hotel.image %>" name = "hotel[image]">
			</div>
			<div class = "form-group">
				<input class = "form-control" type = "text" value="<%= hotel.image2 %>" name = "hotel[image2]">
			</div>
			<div class = "form-group">
				<input class = "form-control" type = "text" value="<%= hotel.image3 %>" name = "hotel[image3]">
			</div>
			<div class = "form-group">
				<input class = "form-control" type = "text" value="<%= hotel.description %>" name = "hotel[description]">
			</div>
			<div class = "form-group">
				<input class = "form-control" type = "text" value="<%= hotel.price %>" name = "hotel[price]">
			</div>
			<div class = "form-group">
				<button class = "btn btn-lg btn-primary btn-block">Submit</button>
			</div>
		</form>
		<a href = "/hotels">Go Back</a>
	</div>
</div>
	
<% include ../partials/footer %>