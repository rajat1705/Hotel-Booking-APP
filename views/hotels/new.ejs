<% include ../partials/header %>

<div class = "container">
	<h1 style = "text-align: center;">
		Create New Room
	</h1>
	<div style = "width: 30%; margin: 25px auto">
		<form action = "/hotels" method = "POST">
			<div class = "form-group">
				<input class = "form-control" type = "text" placeholder = "Name" name = "name">
			</div>
			<div class = "form-group">
				<input class = "form-control" type = "text" placeholder = "Image URL" name = "image">
			</div>
			<div class = "form-group">
				<input class = "form-control" type = "text" placeholder = "Image URL" name = "image2">
			</div>
			<div class = "form-group">
				<input class = "form-control" type = "text" placeholder = "Image URL" name = "image3">
			</div>
			<div class = "form-group">
				<input class = "form-control" type = "text" placeholder = "Description" name = "description">
			</div>
			<div class = "form-group">
				<input class = "form-control" type = "text" placeholder = "Price" name = "price">
			</div>
			<div class = "form-group">
				<button class = "btn btn-lg btn-primary btn-block">Submit</button>
			</div>
		</form>
		<a href = "/hotels">Go Back</a>
	</div>
</div>
	
<% include ../partials/footer %>